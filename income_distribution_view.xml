<?xml version="1.0"?>
<openerp>
    <data>

        <record id="idg_form" model="ir.ui.view">
            <field name="name">idg.form</field>
            <field name="model">income.distribution.generic</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string = "Income Distribution">
                    <group colspan="4" col="4">
                        <field name="name" invisible="1"/>
                        <field name="bank_id"/>
                        <field name="date"/>
                        <field name="amount"/>
                        <field name="bank_charges"/>
                    </group>
                    <notebook>
                       <page string="Distribution Details">
                            <field mode="tree" name="distribution_ids" nolabel="1">
                                <tree string="Distribution Lines" editable="top">
                                    <field name="account_id"/>
                                    <field name="amount" on_change="onchange_contribute(contribute, amount)"/>
                                    <field name="contribute" on_change="onchange_contribute(contribute, amount)"/>
                                    <field name="charges"/>
                                </tree>
                            </field>
                       </page>
                       <page string="Journal Entries">
                            <field name="move_ids" mode="tree" nolabel="1">
                                    <tree string="Accounting Entries">
                                        <field name="date"/>
                                        <field name="account_id"/>
                                        <field name="analytic_account_id"/>
                                        <field name="debit" sum="Total Debit"/>
                                        <field name="credit" sum="Total Credit"/>
                                        <field name="currency_id" string="Encoding Currency"/>
                                        <field name="amount_currency" string="Encoding Amount"/>
                                    </tree>
                                </field>
                       </page>
                    </notebook>
                </form>
            </field>
        </record>        
        <record model="ir.ui.view" id="idg_tree">
            <field name="name">idg.tree</field>
            <field name="model">income.distribution.generic</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Income Distribution">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="bank_id"/>
                    <field name="amount"/>
                    <field name="bank_charges"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_idg_form">
            <field name="name">Income Distribution</field>
            <field name="res_model">income.distribution.generic</field>
            <field name="view_type">form</field>
        </record>
        
        
        
        
        
        
        
        
        <!-- VOucher DIstribution Canada and US -->
        
        
        
        
        
        
        
        
        
        
        
         <record id="voucher_distribution_form" model="ir.ui.view">
            <field name="name">voucher.distribution.form</field>
            <field name="model">voucher.distribution</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string = "Voucher Distribution">
                    <group colspan="4" col="4">
                        <field name="name" invisible="1"/>
                        <field name="date"/>
                        <field name="period_id"/>
                    </group>
                    <group colspan="4" col="4">
                        <group colspan="2" col="2">
                            <field name="country" widget="selection"/>
                            <field name="generated" invisible="1"/>
                        </group>
                        <group colspan="2" col="2" attrs="{'invisible':[('generated','=',True)]}">
                            <button name="%(action_view_voucher_file_import)d" string="Generate Voucher" type="action" icon="gtk-apply"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Missionary Regular Sub-Accts">
                            <field name="missionary_lines" mode="tree" nolabel="1">
                                <tree string="Voucher Lines">
                                    <field name="name"/>
                                    <field name="comments"/>
                                    <field name="comments2"/>
                                    <field name="co1"/>
                                    <field name="batch_date"/>
                                    <field name="co2"/>
                                    <field name="doc_num"/>
                                    <field name="code"/>
                                    <field name="account_name"/>
                                    <field name="type" invisible="1"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Personal Regular Sub-Accts">
                            <field name="personal_lines" mode="tree" nolabel="1">
                                <tree string="Voucher Lines">
                                    <field name="name"/>
                                    <field name="comments"/>
                                    <field name="comments2"/>
                                    <field name="co1"/>
                                    <field name="batch_date"/>
                                    <field name="co2"/>
                                    <field name="doc_num"/>
                                    <field name="code"/>
                                    <field name="account_name"/>
                                    <field name="type" invisible="1"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Voucher Accounts">
                            <field name="voucher_lines" mode="tree" nolabel="1">
                                <tree string="Voucher Lines">
                                    <field name="name"/>
                                    <field name="comments"/>
                                    <field name="comments2"/>
                                    <field name="co1"/>
                                    <field name="batch_date"/>
                                    <field name="co2"/>
                                    <field name="doc_num"/>
                                    <field name="code"/>
                                    <field name="account_name"/>
                                    <field name="type" invisible="1"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Accounts">
                            <field name="other_lines" mode="tree" nolabel="1">
                                <tree string="Voucher Lines">
                                    <field name="name"/>
                                    <field name="comments"/>
                                    <field name="comments2"/>
                                    <field name="co1"/>
                                    <field name="batch_date"/>
                                    <field name="co2"/>
                                    <field name="doc_num"/>
                                    <field name="code"/>
                                    <field name="account_name"/>
                                    <field name="type" invisible="1"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>        
        <record model="ir.ui.view" id="voucher_distribution_tree">
            <field name="name">voucher.distribution.tree</field>
            <field name="model">voucher.distribution</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Voucher Distribution">
                    <field name="name"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_voucher_distribution_form">
            <field name="name">Voucher Distribution</field>
            <field name="res_model">voucher.distribution</field>
            <field name="view_type">form</field>
        </record>
        
    </data>
</openerp>
