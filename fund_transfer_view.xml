<?xml version="1.0"?>
<openerp>
    <data>
        
		<record model="ir.ui.view" id="view_fund_transfer_tree">
            <field name="name">fund.transfer.tree</field>
            <field name="model">fund_transfer</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Fund Transfer">
                    <field name="name"/>
                    <field name="journal_id" domain="[('type','=','transfer')]"/>
                    <field name="period_id"/>
                    <field name="type" invisible="1"/>
                    <field name="pettycash_id" attrs="{'invisible':[('type','!=','p2b')]}"/>
                    <field name="src_account" attrs="{'invisible':[('type','!=','b2b')]}"/>
                    <field name="dest_account" attrs="{'invisible':[('type','not in',['b2b','p2b])]}"/>
                    <field name="src_analytic_account" attrs="{'invisible':[('type','!=','a2a')]}"/>
                    <field name="dest_analytic_account" attrs="{'invisible':[('type','!=','a2a')]}"/>
                </tree>
            </field>
        </record>
		
		<record id="view_fund_transfer_filter" model="ir.ui.view">
            <field name="name">fund.transfer.filter</field>
            <field name="model">fund.transfer</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Fund Transfer">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="period_id"/>		    
                    </search>
            </field>
        </record>      
		
		<record id="view_fund_transfer_form" model="ir.ui.view">
            <field name="name">fund.transfer.form</field>
            <field name="model">fund.transfer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Fund Transfer">
                    <group colspan="4" col="4">
	                    <field name="name"/>
	                    <field name="journal_id" domain="[('type','=','transfer')]" widget="selection"/>
	                    <field name="date" readonly="1"/>
	                    <field name="period_id" readonly="1"/>
	                    <field name="type" invisible="1"/>
                    </group>
                    <separator string="Accounts" colspan="6"/>
                    <group colspan="6" col="6">
	                    <field name="pettycash_id" attrs="{'invisible':[('type','!=','p2b')]}" widget="selection" on_change = "onchange_pettycash(pettycash_id)" domain="[('amount','>','0.00')]"/>
	                    <field name="curr_id"/>
	                    <field name="src_account" attrs="{'invisible':[('type','!=','b2b')]}" domain="[('type','=','liquidity')]"/>
	                    <field name="dest_account" attrs="{'invisible':[('type','!=','b2b')]}" domain="[('type','=','liquidity')]"/>
	                    <field name="dest_p2b_account" attrs="{'invisible':[('type','!=','p2b')]}" domain="[('ownership','=','company')]"/>
	                    <field name="src_analytic_account" attrs="{'invisible':[('type','!=','a2a')]}"/>
	                    <field name="dest_analytic_account" attrs="{'invisible':[('type','!=','a2a')]}"/>
	                    <field name="amount"/>
                    </group>
                    <group colspan="6" col="2" attrs="{'invisible':[('type','!=','p2b')]}">
                        <separator string="Denominations" colspan="6"/>
                        <field name="denom_ids" nolabel="1" colspan="6" domain="[('name.currency_id','=',curr_id)]"/>
                    </group>
                    <group colspan="4" col="13">
                        <field name="state" select="1"/>
                        <button name="transfer" attrs="{'invisible':[('state','!=','draft')]}" string="Transfer"  type="object" icon="gtk-jump-to"/>
                        <button name="cancel" attrs="{'invisible':[('state','=','cancel')]}" string="Cancel"  type="object" icon="gtk-jump-to"/>
                        <button name="set_to_draft" attrs="{'invisible':[('state','!=','cancel')]}" string="Cancel"  type="object" icon="gtk-jump-to"/>
                    </group>
                </form>
            </field>
        </record>     
                
        <record id="action_fund_transfer_b2b_tree" model="ir.actions.act_window">
            <field name="name">Bank to Bank</field>
            <field name="res_model">fund.transfer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="view_id" ref="view_fund_transfer_tree"/>
            <field name="context">{'type':'b2b'}</field>
            <field name="domain">[('type','=','b2b')]</field>
            <field name="search_view_id" ref="view_fund_transfer_filter"/>
        </record>
        <record id="action_fund_transfer_a2a_tree" model="ir.actions.act_window">
            <field name="name">Analytic to Analytic</field>
            <field name="res_model">fund.transfer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="view_id" ref="view_fund_transfer_tree"/>
            <field name="context">{'type':'a2a'}</field>
            <field name="domain">[('type','=','a2a')]</field>
            <field name="search_view_id" ref="view_fund_transfer_filter"/>
        </record>
        <record id="action_fund_transfer_p2b_tree" model="ir.actions.act_window">
            <field name="name">Petty Cash to Bank</field>
            <field name="res_model">fund.transfer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="view_id" ref="view_fund_transfer_tree"/>
            <field name="context">{'type':'p2b'}</field>
            <field name="domain">[('type','=','p2b')]</field>
            <field name="search_view_id" ref="view_fund_transfer_filter"/>
        </record>

       </data>
</openerp>
