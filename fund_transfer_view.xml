<?xml version="1.0"?>
<openerp>
    <data>
        <report id="report_internal_fund_transfer_print"
            string="Internal Bank Transfer"
            model="fund.transfer"
            name="internal.fund.transfer"
            rml="ntm_extension/report/internal_fund_transfer.rml"
            auto="False"
            attachment="(object.name)"
            header = "False"
            menu="True"
            />
		<record model="ir.ui.view" id="view_fund_transfer_tree">
            <field name="name">fund.transfer.tree</field>
            <field name="model">fund.transfer</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Fund Transfer">
                    <field name="name"/>
                    <field name="journal_id" domain="[('type','=','transfer')]"/>
                    <field name="period_id"/>
                    <field name="type" invisible="1"/>
                    <field name="pettycash_id" attrs="{'invisible':[('type','!=','p2b')]}"/>
                    <field name="src_account" attrs="{'invisible':[('type','!=','b2b')]}"/>
                    <field name="dest_account" attrs="{'invisible':[('type','not in',['b2b','p2b])]}"/>
                </tree>
            </field>
        </record>
		
		<record id="view_fund_transfer_filter" model="ir.ui.view">
            <field name="name">fund.transfer.filter</field>
            <field name="model">fund.transfer</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Fund Transfer">
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="period_id"/>		    
                    </search>
            </field>
        </record>      
		
		<record id="view_fund_transfer_form" model="ir.ui.view">
            <field name="name">fund.transfer.form</field>
            <field name="model">fund.transfer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Fund Transfer">
                <notebook>
                    <page string="Transfer Details">
                    <group colspan="4" col="4">
	                    <field name="name"/>
	                    <field name="journal_id" domain="[('type','=','transfer')]" widget="selection"/>
	                    <field name="date" readonly="1"/>
	                    <field name="period_id" readonly="1"/>
	                    <field name="type" invisible="1"/>
                    </group>
                    <group colspan="4" col="4" attrs="{'invisible':[('type','!=','b2b')]}">
                        <field name="release_date" attrs="{'readonly':[('state','!=','requested')]}"/>
                        <field name="receive_date" attrs="{'readonly':[('state','!=','released')]}"/>
                    </group>
                    <separator string="Accounts" colspan="6"/>
                    <group colspan="6" col="6">
	                    <field name="pettycash_id" attrs="{'invisible':[('type','!=','p2b')]}" widget="selection" on_change = "onchange_pettycash(pettycash_id)" domain="[('amount','>','0.00')]"/>
	                    <field name="curr_id" invisible="1"/>
	                    <field name="src_account" attrs="{'invisible':[('type','!=','b2b')]}" domain="[('ownership','=','company')]" on_change="onchange_srcaccount(src_account)"/>
	                    <field name="dest_account" attrs="{'invisible':[('type','!=','b2b')]}" domain="[('currency_id','=',curr_id),('ownership','=','company')]"/>
	                    <field name="dest_p2b_account" attrs="{'invisible':[('type','!=','p2b')]}" domain="[('ownership','=','company')]"/>
	                    <field name="amount"/>
                    </group>
                    <group colspan="6" col="2" attrs="{'invisible':[('type','!=','p2b')]}">
                        <separator string="Denominations" colspan="6"/>
                        <field name="denom_ids" nolabel="1" colspan="6" domain="[('name.currency_id','=',curr_id)]"/>
                    </group>
                    </page>
                    <page string="Journal Items">
                            <group colspan="4" col="2" attrs="{'invisible':[('type','==','b2b')]}">
                                <field name="move_ids" mode="tree" nolabel="1">
                                    <tree string="Accounting Entries">
                                        <field name="date"/>
                                        <field name="account_id"/>
                                        <field name="debit"/>
                                        <field name="credit"/>
                                        <field name="currency_id" string="Encoding Currency"/>
                                        <field name="amount_currency" string="Encoding Amount"/>
                                    </tree>
                                </field>
                            </group>
                            <group colspan="4" col="2" attrs="{'invisible':[('type','!=','b2b')]}">
                                <field name="b2breleasing_move_ids" mode="tree" nolabel="1">
                                    <tree string="Releasing Entries">
                                        <field name="date"/>
                                        <field name="account_id"/>
                                        <field name="debit"/>
                                        <field name="credit"/>
                                        <field name="currency_id" string="Encoding Currency"/>
                                        <field name="amount_currency" string="Encoding Amount"/>
                                    </tree>
                                </field>
                            </group>
                            <group colspan="4" col="2" attrs="{'invisible':[('type','!=','b2b')]}">
                                <field name="b2breceiving_move_ids" mode="tree" nolabel="1">
                                    <tree string="Receiving Entries">
                                        <field name="date"/>
                                        <field name="account_id"/>
                                        <field name="debit"/>
                                        <field name="credit"/>
                                        <field name="currency_id" string="Encoding Currency"/>
                                        <field name="amount_currency" string="Encoding Amount"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        </notebook>
                    <group colspan="4" col="13">
                        <field name="state"/>
                        <group colspan="4" col="13" attrs="{'invisible':[('type','==','b2b')]}" >
                            <button name="transfer" states='draft' string="Transfer"  type="object" icon="gtk-jump-to"/>
                        </group>    
                        <!-- <button name="cancel" attrs="{'invisible':[('type','==','b2b')]}" string="Cancel"  type="object" icon="gtk-jump-to"/>
                        <button name="set_to_draft" attrs="{'invisible':[('type','==','b2b')]}" string="Cancel"  type="object" icon="gtk-jump-to"/> -->
                        <group colspan="4" col="13" attrs="{'invisible':[('type','!=','b2b')]}" >
                        <button name="request" attrs="{'invisible':[('state','!=','draft')]}" string="Request"  type="object" icon="gtk-jump-to"/>
                        <button name="data_get" attrs="{'invisible':[('state','!=','requested')]}" string="Print"  type="object" icon="gtk-jump-to"/>
                        <button name="b2b_release" attrs="{'invisible':[('state','!=','requested')]}" string="Release"  type="object" icon="gtk-jump-to"/>
                        <button name="b2b_receive" attrs="{'invisible':[('state','!=','released')]}" string="Receive"  type="object" icon="gtk-jump-to"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>     
                
