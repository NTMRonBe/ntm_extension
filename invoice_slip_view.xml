<?xml version="1.0"?>
<openerp>
    <data>
        
        <!-- Invoice Slip Uploader -->
		<record model="ir.ui.view" id="view_invoice_slip_upload_tree">
            <field name="name">invoice.slip.upload.tree</field>
            <field name="model">invoice.slip.upload</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Invoice Slip Uploader">
					    <field name="transaction_id"/>
					    <field name="transaction_type"/>
					    <field name="debit_account"/>
					    <field name="debit_fullname"/>
					    <field name="user_id"/>
					    <field name="credit_account"/>
					    <field name="credit_fullname"/>
					    <field name="currency"/>
					    <field name="imported"/>
					    <field name="invoice_date"/>
					    <field name="comment"/>
					    <field name="amount"/>
                </tree>
            </field>
        </record>
		
		<record id="view_invoice_slip_upload_filter" model="ir.ui.view">
            <field name="name">invoice.slip.upload.filter</field>
            <field name="model">invoice.slip.upload</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Invoice Slip Uploader">
					    <field name="transaction_id"/>
					    <field name="transaction_type"/>
					    <field name="debit_account"/>
					    <field name="user_id"/>
					    <field name="credit_account"/>
					    <field name="currency"/>
			    </search>
            </field>
        </record>      
		
		<record model="ir.ui.view" id="view_invoice_slip_upload_form">
            <field name="name">invoice.slip.upload.form</field>
            <field name="model">invoice.slip.upload</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Invoice Slip Uploader">
                    <group colspan="4" col="4">
                    	<field name="transaction_id"/>
					    <field name="transaction_type"/>
					    <field name="debit_account"/>
					    <field name="debit_fullname"/>
					    <field name="user_id"/>
					    <field name="credit_account"/>
					    <field name="credit_fullname"/>
					    <field name="currency"/>
					    <field name="invoice_date"/>
					    <field name="amount"/>
					</group>
					    <field name="comment"/>
                </form>
            </field>
        </record>      
        <record model="ir.actions.act_window" id="action_invoice_slip_upload_form">
        	<field name="name">Uploader</field>
	        <field name="res_model">invoice.slip.upload</field>
		    <field name="view_type">form</field>
        </record>

        
        <!-- Invoice Slips -->
		<record model="ir.ui.view" id="view_invoice_slip_form">
            <field name="name">invoice.slip.form</field>
            <field name="model">invoice.slip</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Invoice Slip">
					    <group colspan="4" col="4">
					    	<field name="transaction_id"/>
					    	<field name="transaction_type"/>
					    	<field name="user_id"/>
					    	<field name="journal_id"/>
					    	<field name="invoice_date"/>
					    	<field name="period_id"/>
					    </group>
					    <group colspan="4" col="4">
					        <group colspan="2" col="2" string="Debit Account">
					            <field name="debit_account" nolabel="1"/>
					        </group>
					        <group colspan="2" col="2" string="Credit Account">
					            <field name="credit_account" nolabel="1"/>
					        </group>
					    </group>
					    <group colspan="4" col="2">
					         <field name="line_ids" nolabel="1" colspan="4" height="300">
                                    <tree string="Invoice Lines">
                                        <field name="name"/>
                                        <field name="amount" sum="Total Amount"/>
                                	</tree>
                                	<form string="Invoice Lines">
										   <field name="name"/>
										   <field name="amount"/>
					                </form>
                                </field>
					    </group>
					    <group colspan="13" col="4">
					        <field name="state"/>
					    </group>
                </form>
            </field>
        </record>
		
		<record id="view_invoice_slip_filter" model="ir.ui.view">
            <field name="name">invoice.slip.filter</field>
            <field name="model">invoice.slip</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Invoice Slip">
					    <field name="transaction_id"/>
					    <field name="transaction_type"/>
					    <field name="debit_account"/>
					    <field name="user_id"/>
					    <field name="credit_account"/>
					    <field name="currency"/>
			    </search>
            </field>
        </record>      
		
		<record model="ir.ui.view" id="view_invoice_slip_tree">
            <field name="name">invoice.slip.form</field>
            <field name="model">invoice.slip</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Invoice Slip">
                    <field name="transaction_id"/>
					    <field name="transaction_type"/>
					    <field name="debit_account"/>
					    <field name="comment"/>
					    <field name="user_id"/>
					    <field name="credit_account"/>
					    <field name="currency"/>
                </tree>
            </field>
        </record>      
        <record model="ir.actions.act_window" id="action_invoice_slip_form">
        	<field name="name">Invoices</field>
	        <field name="res_model">invoice.slip</field>
		    <field name="view_type">form</field>
        </record>
       </data>
</openerp>
