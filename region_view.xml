<?xml version="1.0"?>
<openerp>
    <data>
		
        <record id="region_config_form" model="ir.ui.view">
            <field name="name">region.config.form</field>
            <field name="model">region.config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string = "Regional Settings">
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="gain_loss_acct"/>
                        <button name="budget" string="Generate Budget" type="object" icon="gtk-apply" colspan="4"/>
                    </group>
                    <separator string="Income and Expense Accounts" colspan="4"/>
                    <group colspan="4" col="4">
                        <group colspan="2" col="2">
                            <field name="income_ids" nolabel="1" height="350">
                                <tree string="Income Accounts">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="balance"/>
                                </tree>
                            </field>
                        </group>
                        <group colspan="2" col="2">
                            <field name="expense_ids" nolabel="1" height="350">
                                <tree string="Expense Accounts">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="balance"/>
                                </tree>
                            </field>
                        </group>
                        <group colspan="2" col="2">
                            <field name="equity_ids" nolabel="1" height="350">
                                <tree string="Equity Accounts">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="balance"/>
                                </tree>
                            </field>
                        </group>
                        <group colspan="2" col="2">
                        </group>
                    </group>
                </form>
            </field>
        </record>        
        <record model="ir.ui.view" id="region_config_tree">
            <field name="name">region.config.tree</field>
            <field name="model">region.config</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Regional Settings">
                    <field name="name"/>
                    <field name="gain_loss_acct"/>
                </tree> 
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_region_config_form">
        	<field name="name">Regional Settings</field>
	        <field name="res_model">region.config</field>
		    <field name="view_type">form</field>
        </record>
    </data>
</openerp>
