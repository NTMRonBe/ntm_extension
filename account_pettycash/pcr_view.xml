<?xml version="1.0"?>
<openerp>
    <data>        
    <!--Petty Cash Replenishment-->
       <report id="report_pettycash_replenishment_print"
            string="Print Replenishment"
            model="pettycash.replenishment"
            name="pettycash.replenishment"
            rml="ntm_extension/report/account_print_replenishment.rml"
            auto="False"
            header = "False"
            menu="True"/>
        
        <record id="pcr_form" model="ir.ui.view">
            <field name="name">pcr.form</field>
            <field name="model">pettycash.replenishment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Replenishment">
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="bank_id" domain="[('ownership','=','company'),('currency_id','=',curr_id)]"/>
                        <field name="date" attrs="{'readonly': [('state','!=','draft')]}"/>
                        <field name="period_id" attrs="{'readonly': [('state','!=','draft')]}"/>
                        <field name="pettycash_id" attrs="{'readonly': [('state','!=','draft')]}" on_change="onchange_pettycash(pettycash_id)" widget="selection"/>
                        <field name="curr_id"/>
                        <field name="total_amount" readonly="1"/>
                    </group>
                    <notebook colspan="4">
                        <page string="Denominations Lists">
		                    <group colspan="4" col="2">
		                        <field name="denom_breakdown" mode="tree" nolabel="1" attrs="{'readonly': [('state','!=','draft')]}">
		                          <tree string="Denomination Breakdown" editable="top">
		                              <field name="name"/>
		                              <field name="quantity"/>
		                              <field name="amount"/>
		                          </tree>
		                        </field>
		                    </group>
                    	</page>
                    	<page string="Journal Items">
                    	    <group colspan="4" col="2">
	                    	    <group colspan="4" col="2">
	                    	    	<field name="move_id"  attrs="{'readonly': [('state','!=','confirmed')]}"/>
	                    	    </group>
		                    	<group colspan="4" col="2">
	                    	    	<separator string="Journal Items"/>
			                    	    <group colspan="4" col="2">
			                    	    	<field name="move_ids" mode="tree" nolabel="1">
			                    	    	   <tree string="Accounting Entries">
				                                    <field name="date"/>
				                                    <field name="account_id"/>
				                                    <field name="debit"/>
				                                    <field name="credit"/>
				                                    <field name="currency_id" string="Encoding Currency"/>
				                                    <field name="amount_currency" string="Encoding Amount"/>
				                                </tree>
			                    	    	</field>
			                    	    </group>
	                    	    </group>
                    	    </group>
                    	</page>
                    </notebook>
                    <group col="10" colspan="4">
                        <field name="state"/>
                        <button string="Cancel"
                                            type="object"
                                            name="button_cancel"
                                            icon="gtk-cancel"
                                            attrs="{'invisible': [('state','in',('cancel','completed'))]}"
                                            />
                                    <button string="Confirm"
                                            type="object"
                                            name="confirm_pcr"
                                            icon="gtk-execute"
                                            attrs="{'invisible': [('state','!=','draft')]}"
                                            />
                                    <button string="Complete"
                                            type="object"
                                            name="post_pcr"
                                            icon="gtk-execute"
                                            attrs="{'invisible': [('state','!=','confirmed')]}"
                                            />
                    </group>
                </form>
            </field>
        </record>        
        <record model="ir.ui.view" id="pcr_tree">
            <field name="name">pcr.tree</field>
            <field name="model">pettycash.replenishment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Replenishments">
					    <field name="name"/>
                        <field name="date"/>
                        <field name="bank_id"/>
                        <field name="pettycash_id"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_pcr_form">
        	<field name="name">Replenishment</field>
	        <field name="res_model">pettycash.replenishment</field>
		    <field name="view_type">form</field>
        </record>
        
        <menuitem id="menu_pcr" 
            action="action_pcr_form" 
            parent="main_pettycash"
            sequence="50" 
            groups="base.group_user"/>  

    </data>
</openerp>
