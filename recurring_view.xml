<?xml version="1.0"?>
<openerp>
    <data>
		
        <record id="rsc_view" model="ir.ui.view">
            <field name="name">Generate Entries</field>
            <field name="model">recur.secondary.curr.generate</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Generate Entries">
                <group colspan="4" col="4">
                    <field name="date" required="1"/>
                    <field name="period" required="1"/>
                </group>
               <button string="Check"
                                            type="object"
                                            name="add"
                                            icon="gtk-execute"
                                            />
               </form>
            </field>
        </record>

        <record id="action_rsc_form" model="ir.actions.act_window">
            <field name="name">Generate Entries</field>
            <field name="res_model">recur.secondary.curr.generate</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="rsc_view"/>
            <field name="target">new</field>
        </record>
		
		
        <record id="recur_secondary_curr_form" model="ir.ui.view">
            <field name="name">recur.secondary.curr.form</field>
            <field name="model">recur.secondary.curr</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string = "Secondary Currency Recurring Entries">
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="journal_id"/>
                        <field name="currency_id" widget="selection"/>
                        <field name="acct_selection" attrs="{'readonly':[('line_ids','=',False)]}"/>
                    </group>
                    <notebook>
                        <page string="Entries">
                            <group colspan="4" col="2">
		                        <field name="line_ids" mode="tree" nolabel="1">
		                            <tree string="Entry Lines" editable="top">
		                                <field name="name"/>
		                                <field name="account_id" attrs="{'readonly':[('acct_selection','=','analytic')],'required':[('acct_selection','=','normal')]}"/>
		                                <field name="analytic_id" attrs="{'readonly':[('acct_selection','=','normal')],'required':[('acct_selection','=','analytic')]}"/>
		                                <field name="debit" sum="Total Debit"/>
		                                <field name="credit" sum="Total Credit"/>
		                            </tree>
		                        </field>
                            </group>   
                        </page>
                        <page string="Created Entries">
                            <group colspan="4" col="2">
                              <field name="sched_ids" mode="tree" nolabel="1" readonly="1">
                                  <tree string="Entries">
                                      <field name="date"/>
                                      <field name="move_id"/>
                                  </tree>
                              </field>
                            </group>
                        </page>
                    </notebook>
                    <group colspan="4" col="13">
                    <field name="state" readonly="1"/>
                    <button name="compute" string="Activate" type="object" icon="terp-stock_format-scientific" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="remove_line" string="Deactivate" type="object" icon="terp-stock_format-scientific" attrs="{'invisible':[('state','!=','running')]}"/>
                    </group>
                </form>
            </field>
        </record>        
        <record model="ir.ui.view" id="recur_secondary_curr_tree">
            <field name="name">recur.secondary.curr.tree</field>
            <field name="model">recur.secondary.curr</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Secondary Currency Recurring Entries">
                    <field name="name"/>
                    <field name="journal_id"/>
                </tree> 
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_recur_secondary_curr_form">
        	<field name="name">Secondary Currency Recurring Entries</field>
	        <field name="res_model">recur.secondary.curr</field>
		    <field name="view_type">form</field>
        </record>
    </data>
</openerp>
