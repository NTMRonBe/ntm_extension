<?xml version="1.0"?>
<openerp>
    <data>
		
    <!--Forex Transactions-->
        <record id="recur_secondary_curr_form" model="ir.ui.view">
            <field name="name">recur.secondary.curr.form</field>
            <field name="model">recur.secondary.curr</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string = "Secondary Currency Recurring Entries">
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="journal_id"/>
                    </group>
                    <group colspan="4" col="4">
	                    <separator string="Transfer Details" colspan="4"/>
	                    <group col="2" colspan="2">
	                        <separator colspan="4" string="Starts on"/>
	                        <field name="date_start" />
	                        <field name="period_total"/>
	                    </group>
	                    <group col="2" colspan="2">
	                        <separator colspan="4" string="Valid Up to"/>
	                        <field name="period_nbr" attrs="{'readonly':[('period_type','=','bimonthly')]}"/>
	                        <field name="period_type"/>
	                    </group>
                    </group>
                    <group colspan="4" col="2">
                        <field name="line_ids" mode="tree" nolabel="1">
                            <tree string="Entry Lines" editable="top">
                                <field name="name"/>
                                <field name="analytic_bool"/>
                                <field name="account_id" attrs="{'readonly':[('analytic_bool','=',True)],'required':[('analytic_bool','=',False)]}"/>
                                <field name="analytic_id" attrs="{'required':[('analytic_bool','=',True)],'readonly':[('analytic_bool','=',False)]}"/>
                                <field name="debit"/>
                                <field name="credit"/>
                                <field name="currency_id"/>
                            </tree>
                        </field>
                    </group>    
                </form>
            </field>
        </record>        
        <record model="ir.ui.view" id="recur_secondary_curr_tree">
            <field name="name">recur.secondary.curr.tree</field>
            <field name="model">recur.secondary.curr</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Secondary Currency Recurring Entries">
                    <field name="name"/>
                    <field name="journal_id"/>
                </tree> 
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_recur_secondary_curr_form">
        	<field name="name">Secondary Currency Recurring Entries</field>
	        <field name="res_model">recur.secondary.curr</field>
		    <field name="view_type">form</field>
        </record>
    </data>
</openerp>
